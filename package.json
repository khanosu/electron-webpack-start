{
  "name": "electron-webpack-start",
  "version": "1.0.0",
  "description": "Built from scratch, Webpack based, Electron startup app with Babel",
  "main": "dist/main.js",
  "scripts": {
    "dev": "webpack --mode development",
    "prod": "webpack --mode production",
    "start": "npm run dev && electron dist/main.js",
    "build": "npm run prod && electron-packager . --out=build_dist --overwrite --asar --platform=win32"
  },
  "author": "Furrukh Khan",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-loader": "^8.0.4",
    "electron": "^4.0.0",
    "electron-packager": "^13.0.1",
    "html-webpack-plugin": "^3.2.0",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2"
  }
}
